{
	"name": "obsidium",
	"version": "3.0.0",
	"description": "A declarative wrapper for all the JS observers.",
	"main": "index.js",
	"scripts": {
		"test": "vitest",
		"start": "esbuild src/main.ts --bundle --sourcemap --watch --outfile=main.js --servedir=/",
		"build": "tsc -p tsconfig.pub.json && esbuild --define:process.env.NODE_ENV=\\\"\\\" src/obsidium.ts --bundle --outfile=dist/index.js --format=esm --target=es2020 --minify",
		"build:rm": "rm -rf dist && npm run build",
		"coverage": "vitest --coverage"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dkazmer/Obsidium.git"
	},
	"keywords": [
		"javascript",
		"typescript",
		"observer",
		"observable",
		"IntersectionObserver",
		"MutationObserver",
		"ResizeObserver"
	],
	"author": "Daniel B. Kazmer <dkazmer@live.ca> (https://webshifted.com)",
	"license": "GPL-3.0-only",
	"type": "module",
	"bugs": {
		"url": "https://github.com/dkazmer/Obsidium/issues"
	},
	"homepage": "https://github.com/dkazmer/Obsidium#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@vitest/coverage-v8": "^4.0.15",
		"esbuild": "^0.27.1",
		"happy-dom": "^20.0.11",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"types": "dist/obsidium.d.ts",
	"files": [
		"dist"
	]
}
